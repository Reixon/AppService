<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bt_name_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:src="@drawable/ic_close_24" />

    <TextView
        android:id="@+id/txt_name_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_name_service"
        android:layout_toEndOf="@+id/bt_name_service"
        android:layout_toStartOf="@+id/txt_duration"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:layout_marginEnd="15dp"
        android:text="nombre" />

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/bt_name_service"
        android:layout_toStartOf="@+id/txt_cost"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:text="60m" />

    <TextView
        android:id="@+id/txt_cost"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/bt_name_service"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        android:text="100â‚¬" />
</RelativeLayout>