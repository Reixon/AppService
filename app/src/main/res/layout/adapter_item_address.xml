<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/titleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/direccionLocalizada"
            android:text="@string/text_position_localized"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/titleItem"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_location_on_24" />

    <TextView
        android:id="@+id/txt_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/titleItem"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toStartOf="@id/iconEnter"
        android:layout_toEndOf="@+id/iconLocation"
        android:gravity="center"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

    <ImageView
        android:id="@+id/iconEnter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/titleItem"
        android:layout_alignBottom="@+id/txt_detail_address"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_enter_24"/>

</RelativeLayout>