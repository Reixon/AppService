<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.ViewMainCustomer.HomeCustomerView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="@string/app_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/booking_notification"
                app:cardCornerRadius="8dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/txt_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/layout_data"
                        android:layout_toStartOf="@+id/layout_data"
                        android:layout_marginTop="15dp"
                        android:text="Servicio"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/txt_nameBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_service"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@+id/layout_data"
                        android:layout_toStartOf="@+id/layout_data"
                        android:text="business"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/txt_service"
                        android:layout_alignBottom="@+id/layout_data"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:id="@+id/layout_data"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Febrero"
                            android:maxLines="1"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/month"
                            android:text="8"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10:00"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_below="@id/day"/>

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/search_service"
                android:layout_marginTop="15dp"
                layout="@layout/search_engine_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <HorizontalScrollView
                android:id="@+id/kindBusinessHorizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:scrollbars="none"
                android:background="@color/white"
                android:layout_below="@id/view_pager_grid" >

                <LinearLayout
                    android:id="@+id/layout_kind_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">
                <HorizontalScrollView
                    android:id="@+id/marketingHorizontalScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:scrollbars="none"
                    android:background="@color/white"
                    android:layout_below="@id/view_pager_grid" >

                    <LinearLayout
                        android:id="@+id/layout_marketing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</layout>