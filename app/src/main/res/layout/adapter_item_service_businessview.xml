<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_name_service"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtCost"
        android:gravity="top"
        android:layout_alignBottom="@+id/btBooking"
        android:text="nombre del servicio"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtCost"
        android:textAlignment="textEnd"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="100,00â‚¬"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_toStartOf="@+id/btBooking"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/time"
        android:text="50m"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_toStartOf="@id/btBooking"
        android:layout_below="@id/txtCost"
        android:layout_width="25dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btBooking"
        android:text="@string/hint_bt_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"/>

</RelativeLayout>