<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_setting"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button"
            android:layout_margin="1dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/textItem"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/et_service"
                android:layout_toStartOf="@+id/image_access_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/image_access_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_enter_24"
                android:contentDescription="@string/descripcion_searchButton" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>